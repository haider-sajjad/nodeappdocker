name: docker-build-and-push-to-container-registry

on: 
  push:
    branches:    
      - main
      
jobs:
  build-and-push-to-ghcr:
    name: testing the sample workflow cicd
    runs-on: ubuntu-latest
  
    steps:
      - name: login to GHCR
        run: |
          echo echo "${{ secrets.GITHUB_TOKEN }}" | docker login https://ghcr.io -u ${{ github.actor }} --password-stdin
          echo "WORLD"
